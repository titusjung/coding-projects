package connect4;

import java.io.*;
import java.util.Arrays;
import java.lang.*;

public class ConnectFour {

	public static void main(String [] args)
	{
		Connect4 game = new Connect4();
		System.out.print(game.toString());
		game.drop('A');
		game.drop('B');
		System.out.print(game.toString());

	}
}

class Connect4
{
	private final int bsize = 6;
	private char [] [] Board = new char[bsize][bsize];
	private int turn;
	
	public Connect4()
	{
		turn =0;
		for(char[] row:Board)
		{
			Arrays.fill(row, 'N');
		}
	}
	
	public String toString()
	{
		StringBuilder sb = new StringBuilder();
		for(char[] row:Board)
		{
			sb.append(row);
			sb.append("\n");
		}
		return sb.toString();
	}
	
	public void drop(char col)
	{
		char player;
		char x = Character.toUpperCase(col);
		Character.isLowerCase(col);
		if(turn%2==0)
		{
			player = 'X';
		}
		else
		{
			player = 'O';
		}
		drophelper(x-'A',player);
		/*
		switch(x)
		{
		case 'A':
			drophelper(0,player);
			break;
		case 'B':
			drophelper(1,player);
			break;
		case 'C':
			drophelper(2,player);
			break;
		case 'D':
			drophelper(3,player);
			break;
		case 'E':
			drophelper(4,player);
			break;
		case 'F':
			drophelper(5,player);
			break;
		}
		*/
	}
	private void drophelper(int col, char let)
	{
		if(col>5) return;
		for(int i=bsize-1; i>=0; i--)
		{
			if(Board[i][col]=='N')
			{
				Board[i][col]=let;
				return;
			}
		}
	}
	
}